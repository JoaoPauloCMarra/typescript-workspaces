{
  "name": "ts-workspaces",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "web:dev": "lerna run --stream --scope web dev",
    "web:build": "lerna run --stream --scope web build",
    "web:start": "lerna run --stream --scope web start",
    "web:lint": "lerna run --stream --scope web lint",
    "prepare": "husky install",
    "lint": "npm-run-all web:lint",
    "clean": "rimraf ./dist",
    "build": "npm-run-all clean web:build",
    "format": "prettier --config ./.prettierrc.js --write \"**/*.{ts,tsx,scss}\"",
    "test": "jest -u --colors --passWithNoTests -o",
    "test:all": "yarn test --all"
  },
  "dependencies": {
    "next": "10.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.32.12"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=12"
  },
  "author": {
    "email": "joaopaulocmarra@gmail.com",
    "name": "JoaoPauloCMarra",
    "url": "https://github.com/JoaoPauloCMarra"
  },
  "workspaces": [
    "shared/**",
    "apps/**"
  ],
  "browserslist": [
    "defaults"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(scss|css|jpg|png|gif)$": "<rootDir>/__mocks__/file.mock.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "(/(app|shared)/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "scss",
      "css",
      "json",
      "node"
    ]
  }
}
